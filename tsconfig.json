{
  "compilerOptions": {
    "watch": true,
    "target": "es6",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true,
  },
"compileOnSave": true,
  "exclude": [
    "node_modules",
    "wwwroot"
  ]
}